<% layout("/layouts/boilerplate") %>
<br><br>
<div class="row">
    <div class="col-8 offset-2 mt-3">
        <h3>Create a new Listing</h3>
        <form action="/listings" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" placeholder="Enter title" type="text" class="form-control" value="<%= listing ? listing.title : '' %>" required >
            </div> <div class="invalid-feedback"></div>
            <div class="mb-3">   
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" placeholder="Enter description" type="text" class="form-control" required ><%= listing ? listing.description : '' %></textarea></textarea> 
            </div> <div class="invalid-feedback"></div>
            <div class="mb-3">
                <label for="image" class="form-label">Image Link</label>
                <input name="listing[image][url]" placeholder="Enter image URL" type="text" class="form-control" value="<%= listing && listing.image ? listing.image.url : '' %>">
            </div> <div class="invalid-feedback"></div>
            <div class="row">
                 <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input name="listing[price]" placeholder="1200" type="number" class="form-control" required value="<%= listing ? listing.price : '' %>"
 >
                </div> <div class="invalid-feedback"></div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" placeholder="India" type="text" class="form-control" required value="<%= listing ? listing.country : '' %>" > 
                </div> <div class="invalid-feedback"></div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required  value="<%= listing ? listing.location : '' %>" >
            </div> <div class="invalid-feedback"></div>
            <br><br>
            <button class="btn btn-dark add-btn mt-3">Add</button>
            <br><br>
        </form>
    </div>
</div>